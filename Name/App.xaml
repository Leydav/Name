<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Name.App">
    <Application.Resources>
        <Color x:Key="PKColor">#201E43</Color>
        <Style x:Key="btn-primary" TargetType="Button">
            <Setter Property="BackgroundColor" Value="{StaticResource PKColor}"/>
        </Style>

        <Style x:Key="btn-maroon" TargetType="Button">
            <Setter Property="BackgroundColor" Value="Maroon"/>
            <Setter Property="Margin" Value="90,10"/>
            <!--<Setter Property="Padding" Value="20"/>-->
            <Setter Property="CornerRadius" Value="20"/>
            <Setter Property="TextColor" Value="White"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="FontAttributes" Value="Bold"/>
        </Style>

        <!--<Style x:Key="btn_chocolate" TargetType="Button">
            <Setter Property="BackgroundColor" Value="Maroon"/>
            <Setter Property="CornerRadius" Value="20"/>
            <Setter Property="Margin" Value="80,0"/>
            <Setter Property="TextColor" Value="White"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="FontAttributes" Value="Bold"/>
        </Style>-->
    </Application.Resources>
</Application>